<body class="text-white bg-dark h ">
 <div class="container">
 <br>
<h2 class="h-25 mb-3 text-monospace login">Sign up</h2>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <div class="float-right text-danger">
        <%= devise_error_messages! %>   
      </div>   
      <div>
        <%= f.label :nickname %> <em>(12文字以内で入力してください)</em><br />
        <%= f.text_field :nickname, autofocus: true, maxlength: "12" ,class:"name clearfix",placeholder:"Nickname"%>
      </div>

      <div>
        <%= f.label :email %><br />
        <%= f.email_field :email ,placeholder:"E-mail"%>
      </div>

      <div>
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" ,placeholder:"Password"%>
      </div>

      <div>
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" ,placeholder:"PasswordConfirmation"%>
      </div>

      <div >
        <%= f.label :height %><br />
        <%= f.text_field :height ,placeholder:"Height"%>
      </div>

      <div >
        <%= f.label :weight%><br />
        <%= f.text_field :weight ,placeholder:"Weight"%>
      </div>

      <div>
        <%= f.label :age %><br />
        <%= f.text_field :age ,placeholder:"Age"%>
      </div>

      <div>
        <%= f.label :sex %><br />
        <%= f.collection_select(:sex_id, Sex.all, :id, :name, {}, {class:"select-box", id:"posts--sex"}) %>
      </div>

      <div>
        <%= f.label :currently_training_status %><br />
        <%= f.collection_select(:training_status_id, TrainingStatus.all, :id, :name, {}, {class:"select-box", id:"posts--status"}) %>
      </div>

      <div>
        <%= f.label :training_goal_BMI %><br />
        <%= f.collection_select(:training_goal_id, TrainingGoal.all, :id, :name, {}, {class:"select-box", id:"posts--goal"}) %>
      </div>

      <div class="text-center">
        <%= f.submit "Sign up", class:"w-20 btn btn-lg btn-primary "%>
      </div>
    <% end %>
<%= render "devise/shared/links" %>
<br>
</div>
</body>

