<body class="text-white bg-dark h">
 <div class="container">
 <br>
 <br>
 <br>
 <br>
 <br>
 <br>
 <br>
  <h2 class="h-25 mb-3 text-monospace login">Please Sign in</h2>
  <br>
  <br>
   <div class="text-center">
     <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= devise_error_messages! %>     
      <div class="form-group row email_label">
        <%= f.label :email, class:"col-sm-2 col-form-label"%>
        <div class="col-sm-4">
          <%= f.email_field :email, autofocus: true, class:"form-control"%>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password, class:"col-sm-2 col-form-label" %>
        <div class="col-sm-4">
          <%= f.password_field :password, autocomplete: "off", class:"form-control"%>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
          <%= f.check_box :remember_me%>
          <%= f.label :remember_me %>
      <% end -%>
    </div>

      <div class="text-center">
        <%= f.submit "Sign in", class:"w-20 btn btn-lg btn-primary", data: {"turbolinks" => false}%>
      </div>
    <% end %>
  <%= render "devise/shared/links" %>
 </div>
</body>
