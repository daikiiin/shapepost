    <h1 class="text-center text-warning text-monospace post1">投稿内容の編集</h1>
       <br>
         <%= form_with model: @post,local: true do |f| %>
            <div class="border container-fruid " >
             <br>
               <div class="container">
                    <div class="form-group">
                        <label>NICKNAME：</label>
                        <span class="indispensable">必須</span>
                        <%= f.text_field :name, class:"form-control"%>
                    </div>
                    <div class="form-group">
                        <label>週の運動の頻度：</label>
                        <span class="indispensable">必須</span>
                          <%= f.collection_select(:training_status_id, TrainingStatus.all, :id, :name, {}, {class:"select-box form-control ", id:"posts--status"}) %>
                    </div>
                    <div class="form-group">
                        <label>写真を選択して投稿しよう!：</label>
                        <span class="indispensable">必須</span>
                        <br>
                        <%= f.file_field :image, id:"post-image"%>
                    </div>
                    <div class="form-group">
                        <label>補足：特に習慣化できたこと！</label>
                        <span class="indispensable">必須</span>
                        <%= f.text_area :explain, class:"form-control"%>                   
                   </div>
                 </div>
            </div>
                <div class="row center-block text-center">
                <div class="col-1">
                </div>
                <div class="col-2">
                  <%= link_to "戻る" , "/" ,class:"btn btn-outline-secondary btn-block"%>
               </div>
               <div class="col-5">
                  <%= f.submit "変更する", class:"btn btn-outline-primary btn-block" %>
               </div>
               </div>
               <div class="col-1">
               </div>
               <br>
               <br>
               <hr>
        <% end %>

